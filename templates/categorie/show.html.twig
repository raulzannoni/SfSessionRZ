{% extends 'base.html.twig' %}

{% block title %}Detail of Category: {{categorie}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1>Detail of Category: {{categorie}}</h1>
        <div class="m-3">
            <div class="card mb-3" style="max-width: 1024px;">
                <div class="row g-0">
                    <div class="col-md-6">
                        <h4>Modules of {{categorie}}</h4>
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                <th scope="col">Modules</th>
                                <th scope="col">Number of Sessions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for module in categorie.modules %}
                                <tr>
                                <th scope="row"><a href="{{ path('show_module', {'id' : module.id}) }}">{{module}}</a></th>
                                <td>/</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    <div>
                </div>
            </div>
        </div>
        
{% endblock %}
