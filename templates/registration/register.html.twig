{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container h-100 w-100" style=
    "height: 100vh; 
    width: 100vh; 
    padding: 20px;
    ">
        <h1>Register</h1>
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-11">
                <div class="card text-black custom-card mx-auto my-5 d-flex" style="width: 550px; border-radius: 25px;">
                    <div class="card-body p-md-5 d-flex justify-content-center align-items-center">
                        <!-- Adjust the width value as per your requirement -->
                        <div class="row justify-content-center" style="width: 100%; max-width: 550px;">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 w-100">
                                {{ form_errors(registrationForm) }}
                                {{ form_start(registrationForm) }}
                                {{ form_row(registrationForm.email) }}
                                {{ form_row(registrationForm.pseudo) }}
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                                {{ form_row(registrationForm.agreeTerms) }}

                                <button type="submit" class="btn btn-lg btn-primary">Register</button>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
